<% if p.comments.size > 0 %>
<div class="comments">
  <% p.comments.each do |c| %>
    <p>
    <%= image_tag avatar_url(c.author, '32'), height: '32', width: '32' %>
    <strong class="blue">
      <%= link_to c.author.name, user_path(c.author) %></strong> <%= c.content %>
    </p>
    <ul class='list-inline'>
      <li>
        <%= render partial: 'likes/form', locals: { likable: c, btn_class: 'btn-link', no_icon: true } %>
      </li>
      <% if c.likes.size > 0 %>
      <li>
        <span class='blue'><i class="glyphicon glyphicon-thumbs-up"></i> <%= c.likes.size %></span>
      </li>
      <% end %>
      <li>
        <span class="grey"><%= time_ago_in_words(c.created_at) %></span>
      </li>

    </ul>


  <% end %>
</div>
<% end %>