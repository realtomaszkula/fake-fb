<%  unless already_liked?(likable, current_user.id) %>


  <%= form_for [likable, @like] do |f| %>
    <%= f.hidden_field :author_id, value: current_user.id %>
    <%= button_tag :class => btn_class ||= "btn-primary" do %>
      <% unless no_icon %><i class="glyphicon glyphicon-thumbs-up"></i><% end %>
        Lubie to!
    <% end %>
  <% end %>

<% else %>

<%= form_for [likable, find_like(likable, current_user.id)], method: 'delete' do |f| %>
  <%= button_tag :class => btn_class ||= "btn-default" do %>
  <% unless no_icon %><i class="glyphicon glyphicon-thumbs-up"></i><% end %>
    Nie lubie!
  <% end %>
<% end %>


<% end %>







